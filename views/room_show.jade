extends layout

block content
  script(src='/javascripts/room.js')
  script(charset="utf-8", type="text/javascript", src="http://www.youtube.com/player_api?enablejsapi=1&version=3")
  h1 #{room.name}
  input(type="hidden", class="username", id="#{curr_user.name}") 
  div(class="row")
    div(class="span9")
      div(id="videoView")
      div(id="queueView")
    div(class="span6")
      input( id="ytsearch")
      button( id="ytsubmit") Search youtube

      //- form(method="post", action="/rooms/enqueue", id="enqueueForm")
      //-   input(type="hidden", name="roomid", value=room._id)
      //-   input(name='video', id="queueInput") Add a YouTube link for us to watch.
      //-   button(type='submit', id="submitButton") Submit
     
      div(id="ytlist")
    div(class="span2")
      div(id="userView")
        h4 Here:
        each user, i in room.users
          div
            img(src=user.photo)
            br#{user.name}

    div(id="chatbox", class="row")
      div(id="chatarea", class="span4 well")
      div(id="chatform", class="span6")
        input(class="input-xlarge search-query", id="chat_message", type="text", placeholder="Enter message...")
        button(class="btn", id="chat_submit") Chat
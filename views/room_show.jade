extends layout

block content
  script(src='/javascripts/room.js')
  script(charset="utf-8", type="text/javascript", src="http://www.youtube.com/player_api?enablejsapi=1&version=3")
  .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
          br
          .container
            button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a#logo.brand(href='#') Turntube.tv
            .nav-collapse.collapse
              ul.nav
                li.active
                  a(href='#') Watch
                li
                  a(href='#about') About
              ul.nav.pull-right(style='padding-right: 20px;')
                li
                  button.btn(type='submit')
                    strong#reds  NEXT 
                    | | Watch Similar Video »
          br
  .container
    .row-fluid
        .span10.offset1
          .span7
            br
            br
            ul.thumbnails
              li
                .thumbnail(style='padding: 20px;')
                  iframe(width='560', height='315', src='http://www.youtube.com/embed/wfpL6_0OBuA', frameborder='0', allowfullscreen='allowfullscreen')
                br
                span.badge.badge-important #{room.users.length} Listeners
                .img-polaroid(style='text-align: center; padding: 10px;')
                  each user, i in room.users
                    img(src=user.photo, width='10%')
                div(id="queueView")
                  h2 Video Queue
          div.span4.offset1
            br
            br
            ul.thumbnails(id="chat" )
              li
                div.thumbnail(style='padding: 20px; text-align: left; width: 230px; height: 300px', id="chatarea")
            
            div(class="span6")
              input( id="ytsearch")
              button( id="ytsubmit") Search youtube
              div(id="ytlist")

            div(id="chatform")
              fieldset(style='text-align: center;')
                legend(style='text-align: left;')
                  h4 Speak Up...
                textarea.input-xlarge(rows='4', placeholder='Type something…', id="chat_message")
                br
                button.btn(type='submit', id="chat_submit") Submit
      .row-fluid
        .span12
          center
            p © 2018 Turntube.tv | Made in Boston
       Javascripts 
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    script(src='static/bootstrap/js/bootstrap.js')

  input(type="hidden", class="username", id="#{curr_user.name}") 
  